    <script>


const url = "http://localhost:3030/api/Bitacoras"
const contenedor = document.querySelector("tbody")
let resultados ='';









  //Procedimiento Mostrar

  
   
   const muestra = async()=>{
    await axios.get(url).
    then(response=>{
      mostrar(response.data)
     
    })
   }
  
   muestra();
   const mostrar = (bitacoras)=>{
    bitacoras.forEach(bitacora => {
       
        resultados+=`<tr>
                <td>${bitacora.IdBitacora}</td>
                <td>${bitacora.Usuario}</td>
                <td>${bitacora.Accion}</td>
                <td>${bitacora.tablaAlterada}</td>
                <td>${bitacora.fechamodificacion}</td>
                </tr>`
              
                  contenedor.innerHTML = resultados     
      });
   }
   
  
  
  
